---
interface Props {
  title: string;
  description: string;
}
const { title, description } = Astro.props;
---

<li class="card">
  <header class="card__header">
    <h3 class="card__title">{title}</h3>
    <picture class="card__icon-wrap">
      <slot />
    </picture>
  </header>
  <p class="card__text">{description}</p>
</li>

<style>
  :root {
    --card-header-height: 8rem;
    --card-width: 42rem;
    --card-padding: 2rem;
  }
  .card {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    background-color: var(--dark);
    border: 0.8rem solid var(--light);
    border-radius: 2rem;
    margin: 0 auto;
    padding: 0 2rem 2rem 2rem;
    color: var(--white);
    position: sticky;
  }
  .card__header {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: var(--card-header-height);
  }
  .card__title {
    font-size: clamp(2rem, 8vw, 5rem);
  }
  .card__text {
    font-size: clamp(2rem, 2.2vw, 3rem);
    width: 100%;
    line-height: 120%;
  }
  .card__icon-wrap {
    height: 7rem;
    width: 7rem;
  }
  .card__title::first-letter,
  .card__text::first-letter {
    text-transform: capitalize;
  }

  /* sticky settings */
  .card:nth-child(1) {
    --index: 1;
    top: calc(var(--index) * var(--card-header-height));
    margin-bottom: calc(6 * var(--card-header-height));
  }
  .card:nth-child(2) {
    --index: 2;
    top: calc(var(--index) * var(--card-header-height));
    margin-bottom: calc(5 * var(--card-header-height));
  }
  .card:nth-child(3) {
    --index: 3;
    top: calc(var(--index) * var(--card-header-height));
    margin-bottom: calc(4 * var(--card-header-height));
  }
  .card:nth-child(4) {
    --index: 4;
    top: calc(var(--index) * var(--card-header-height));
    margin-bottom: calc(3 * var(--card-header-height));
  }
  .card:nth-child(5) {
    --index: 5;
    top: calc(var(--index) * var(--card-header-height));
    margin-bottom: calc(2 * var(--card-header-height));
  }
  .card:nth-child(6) {
    --index: 6;
    top: calc(var(--index) * var(--card-header-height));
    margin-bottom: calc(1 * var(--card-header-height));
  }
</style>
