---
import Section from "../components/Section.astro";
import Text from "../components/Text.astro";
---

<Section isFullScreen align="center" id="welcome">
  <header>
    <h1 class="title title--lx">consultorio dental <br /> en merida</h1>
    <Text size="lg" modifier="welcome">
      experimenta la excelencia en
      <span class="blue-strong">atencion dental</span>
    </Text>
    <iframe
      class="spline-scene"
      src="https://my.spline.design/tooth-f47fafbe9346f3e18f5f935f099895a6/"
    ></iframe>
  </header>
</Section>

<style>
  header {
    position: relative;
    align-self: flex-start;
    width: 95%;
    height: 75vh;
    background-color: var(--dark);
    text-align: center;
    border-radius: 2rem;
    color: var(--white);
    margin-top: calc(var(--nav-height) * 1.5);
    padding: 0 1.5rem;
    display: grid;
    place-content: center;
    gap: 2rem;
    overflow-wrap: break-word;
    overflow: hidden;
    z-index: 1;
  }
  header::after {
    position: absolute;
    content: "";
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: black;
    opacity: 0.2;
    z-index: 2;
  }
  .spline-scene {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
    border: 0;
  }

  h1 {
    position: relative;
    z-index: 3;
  }
</style>
